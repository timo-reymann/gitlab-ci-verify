{
  "branches": [
    "master",
    "main"
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@google/semantic-release-replace-plugin",
      {
        "replacements": [
          {
            "countMatches": true,
            "files": [
              "python_wrapper/pyproject.toml"
            ],
            "from": "version = \"[0-9.]+\"",
            "to": "version = \"${nextRelease.version}\"",
            "results": [
              {
                "file": "python_wrapper/pyproject.toml",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ]
          },
          {
            "countMatches": true,
            "files": [
              "docs/installation.md"
            ],
            "from": "\\s{2}rev: [v0-9.]+",
            "to": "  rev: v${nextRelease.version}",
            "results": [
              {
                "file": "docs/installation.md",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ]
          },
          {
            "countMatches": true,
            "files": [
              "ci-templates/v2.gitlab-ci.yml"
            ],
            "from": "\\s{4}GITLAB_CI_VERIFY_VERSION: [v0-9.]+",
            "to": "    GITLAB_CI_VERIFY_VERSION: v${nextRelease.version}",
            "results": [
              {
                "file": "ci-templates/v2.gitlab-ci.yml",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ]
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "docs/installation.md",
          "python_wrapper/pyproject.toml",
          "ci-templates/v2.gitlab-ci.yml"
        ]
      }
    ],
    [
      "@semantic-release/github",
      {
        "path": "semantic-release",
        "name": "timo-reymann/gitlab-ci-verify",
        "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
      }
    ]
  ],
  "tagFormat": "v${version}"
}